---
import Layout from './Layout.astro';

interface Section {
  id: string;
  title: string;
}

interface PlaybookNav {
  slug: string;
  title: string;
}

interface Props {
  title: string;
  metaTitle: string;
  metaDescription: string;
  subtitle: string;
  difficulty: 'Beginner' | 'Intermediate' | 'Advanced';
  readingTime: string;
  lastUpdated: string;
  sections: Section[];
  prev?: PlaybookNav;
  next?: PlaybookNav;
  schema?: string;
}

const {
  title,
  metaTitle,
  metaDescription,
  subtitle,
  difficulty,
  readingTime,
  lastUpdated,
  sections,
  prev,
  next,
  schema,
} = Astro.props;

const difficultyColors: Record<string, { bg: string; text: string; border: string }> = {
  Beginner:     { bg: 'bg-green-500/10', text: 'text-green-400', border: 'border-green-500/20' },
  Intermediate: { bg: 'bg-yellow-500/10', text: 'text-yellow-400', border: 'border-yellow-500/20' },
  Advanced:     { bg: 'bg-red-500/10', text: 'text-red-400', border: 'border-red-500/20' },
};

const colors = difficultyColors[difficulty];
---

<Layout title={metaTitle} description={metaDescription} schema={schema}>

  <!-- Breadcrumb + Hero -->
  <section class="relative overflow-hidden pt-12 pb-16 md:pt-16 md:pb-20">
    <div class="absolute inset-0 pointer-events-none">
      <div class="absolute top-1/4 left-1/4 w-80 h-80 bg-coral/5 rounded-full blur-3xl"></div>
      <div class="absolute bottom-1/4 right-1/3 w-64 h-64 bg-deep-blue/15 rounded-full blur-3xl"></div>
    </div>
    <div class="relative max-w-4xl mx-auto px-6">
      <!-- Breadcrumb -->
      <nav class="flex items-center gap-2 text-sm text-gray-500 mb-8">
        <a href="/" class="hover:text-gray-300 transition-colors">Home</a>
        <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" /></svg>
        <a href="/playbooks" class="hover:text-gray-300 transition-colors">Playbooks</a>
        <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" /></svg>
        <span class="text-gray-400 truncate">{title}</span>
      </nav>

      <!-- Badges -->
      <div class="flex flex-wrap items-center gap-3 mb-6">
        <span class={`inline-flex items-center px-2.5 py-1 rounded-lg text-xs font-medium ${colors.bg} ${colors.text} border ${colors.border}`}>
          {difficulty}
        </span>
        <span class="inline-flex items-center gap-1.5 px-2.5 py-1 rounded-lg bg-coral/10 text-coral text-xs font-medium border border-coral/20">
          <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>
          {readingTime}
        </span>
        <span class="inline-flex items-center gap-1.5 px-2.5 py-1 rounded-lg bg-white/5 text-gray-400 text-xs font-medium border border-white/10">
          <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" /></svg>
          Updated {lastUpdated}
        </span>
      </div>

      <!-- Title -->
      <h1 class="text-3xl md:text-4xl lg:text-5xl font-extrabold leading-tight mb-4">
        {title}
      </h1>
      <p class="text-lg md:text-xl text-gray-400 max-w-2xl leading-relaxed mb-6">
        {subtitle}
      </p>

      <!-- Author -->
      <div class="flex items-center gap-3">
        <div class="flex items-center justify-center w-9 h-9 rounded-full bg-coral/10 text-coral text-sm font-bold border border-coral/20">C</div>
        <div>
          <p class="text-sm font-medium text-white">CodeToCash Team</p>
          <p class="text-xs text-gray-500">codetocash.dev</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Main Content Area -->
  <div class="max-w-7xl mx-auto px-6 pb-24">
    <div class="flex flex-col lg:flex-row gap-12">

      <!-- Sticky Sidebar TOC (Desktop) -->
      <aside class="hidden lg:block w-60 shrink-0">
        <nav id="toc-sidebar" class="sticky top-24">
          <p class="text-xs font-semibold uppercase tracking-wider text-gray-500 mb-4">In This Playbook</p>
          <ol class="space-y-1 text-sm">
            {sections.map((s, i) => (
              <li>
                <a
                  href={`#${s.id}`}
                  class="toc-link flex items-start gap-2 px-3 py-2 rounded-lg text-gray-400 hover:text-white hover:bg-white/5 transition-colors"
                  data-section={s.id}
                >
                  <span class="text-coral/60 font-mono text-xs mt-0.5">{String(i + 1).padStart(2, '0')}</span>
                  <span class="leading-snug">{s.title}</span>
                </a>
              </li>
            ))}
          </ol>
        </nav>
      </aside>

      <!-- Mobile TOC -->
      <div class="lg:hidden">
        <button
          id="mobile-toc-btn"
          class="w-full flex items-center justify-between px-4 py-3 bg-navy-light border border-white/10 rounded-xl text-sm font-medium text-gray-300"
        >
          <span class="flex items-center gap-2">
            <svg class="w-4 h-4 text-coral" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" /></svg>
            Table of Contents
          </span>
          <svg id="mobile-toc-arrow" class="w-4 h-4 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" /></svg>
        </button>
        <nav id="mobile-toc" class="hidden mt-2 p-4 bg-navy-light border border-white/10 rounded-xl">
          <ol class="space-y-1 text-sm">
            {sections.map((s, i) => (
              <li>
                <a href={`#${s.id}`} class="mobile-toc-link flex items-start gap-2 px-3 py-2 rounded-lg text-gray-400 hover:text-white hover:bg-white/5 transition-colors" data-section={s.id}>
                  <span class="text-coral/60 font-mono text-xs mt-0.5">{String(i + 1).padStart(2, '0')}</span>
                  <span class="leading-snug">{s.title}</span>
                </a>
              </li>
            ))}
          </ol>
        </nav>
      </div>

      <!-- Article Content -->
      <article class="min-w-0 flex-1 max-w-[700px]">
        <slot />

        <!-- Newsletter CTA -->
        <div class="mt-20 p-8 md:p-10 bg-gradient-to-br from-coral/15 to-deep-blue/30 border border-coral/20 rounded-2xl text-center">
          <h3 class="text-2xl font-bold text-white mb-3">Level Up Your Marketing</h3>
          <p class="text-gray-400 mb-6 max-w-lg mx-auto">
            Subscribe to the CodeToCash newsletter for weekly playbooks, teardowns, and DRM tactics for developer entrepreneurs.
          </p>
          <form class="flex flex-col sm:flex-row gap-3 max-w-md mx-auto mb-3">
            <input type="email" placeholder="you@example.com" aria-label="Email address" class="flex-1 px-4 py-3 bg-navy border border-white/10 rounded-xl text-white placeholder:text-gray-500 focus:outline-none focus:border-coral/50 text-sm" />
            <button type="button" class="px-6 py-3 bg-coral hover:bg-coral/90 text-white font-semibold rounded-xl transition-colors text-sm whitespace-nowrap cursor-pointer">Subscribe Free</button>
          </form>
          <p class="text-gray-500 text-xs">Join 1,000+ developers. No spam, unsubscribe anytime.</p>
        </div>

        <!-- Prev / Next Navigation -->
        <nav class="mt-12 grid gap-4 sm:grid-cols-2">
          {prev && (
            <a href={`/playbooks/${prev.slug}`} class="group flex flex-col p-5 bg-navy-light border border-white/5 rounded-xl hover:border-coral/20 transition-all">
              <span class="text-xs text-gray-500 mb-1">Previous Playbook</span>
              <span class="text-sm font-medium text-gray-300 group-hover:text-coral transition-colors leading-snug">{prev.title}</span>
            </a>
          )}
          {next && (
            <a href={`/playbooks/${next.slug}`} class={`group flex flex-col p-5 bg-navy-light border border-white/5 rounded-xl hover:border-coral/20 transition-all ${!prev ? 'sm:col-start-2' : ''}`}>
              <span class="text-xs text-gray-500 mb-1 sm:text-right">Next Playbook</span>
              <span class="text-sm font-medium text-gray-300 group-hover:text-coral transition-colors leading-snug sm:text-right">{next.title}</span>
            </a>
          )}
        </nav>
      </article>
    </div>
  </div>

  <script>
    // Mobile TOC toggle
    const mobileTocBtn = document.getElementById('mobile-toc-btn');
    const mobileToc = document.getElementById('mobile-toc');
    const mobileTocArrow = document.getElementById('mobile-toc-arrow');

    if (mobileTocBtn && mobileToc && mobileTocArrow) {
      mobileTocBtn.addEventListener('click', () => {
        mobileToc.classList.toggle('hidden');
        mobileTocArrow.classList.toggle('rotate-180');
      });
      mobileToc.querySelectorAll('a').forEach(link => {
        link.addEventListener('click', () => {
          mobileToc.classList.add('hidden');
          mobileTocArrow.classList.remove('rotate-180');
        });
      });
    }

    // Smooth scroll
    document.querySelectorAll('a[href^="#"]').forEach(anchor => {
      anchor.addEventListener('click', (e) => {
        e.preventDefault();
        const target = document.querySelector(anchor.getAttribute('href')!);
        if (target) target.scrollIntoView({ behavior: 'smooth' });
      });
    });

    // Active section highlighting
    const sections = document.querySelectorAll('.playbook-section');
    const tocLinks = document.querySelectorAll('.toc-link');

    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          const id = entry.target.getAttribute('id');
          tocLinks.forEach(link => {
            if (link.getAttribute('data-section') === id) {
              link.classList.add('bg-coral/10', 'text-coral', 'font-medium');
              link.classList.remove('text-gray-400');
            } else {
              link.classList.remove('bg-coral/10', 'text-coral', 'font-medium');
              link.classList.add('text-gray-400');
            }
          });
        }
      });
    }, { rootMargin: '-80px 0px -70% 0px', threshold: 0 });

    sections.forEach(section => observer.observe(section));
  </script>

</Layout>
